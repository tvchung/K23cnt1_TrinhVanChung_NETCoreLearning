@model IEnumerable<TvcLesson10EF.Models.Category>

@{
    ViewData["Title"] = "Danh sách loại sách";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="d-flex flex-end bd-highlight">
    <form class="d-flex" method="get" asp-action="TvcIndex" asp-controller="TvcCategories">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="keyword">
        <button class="btn btn-outline-success" type="submit">Tìm kiếm</button>
    </form>
    <a asp-action="TvcCreate" class="btn btn-success">Thêm mới</a>
</div>
<p>
   
</p>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th class="text-center">Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            
        foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td class="text-center">
                    <a asp-action="TvcEdit" asp-route-tvcId="@item.CategoryId" class="btn btn-primary">Sửa</a>
                    <a asp-action="TvcDetails" asp-route-tvcId="@item.CategoryId" class="btn btn-info">Xem</a>
                    <a asp-action="TvcDelete" asp-route-tvcId="@item.CategoryId" class="btn btn-danger">Xóa</a>
                </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3"> chưa có dữ liệu</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Tổng số: @Model.Count() </th>
        </tr>
    </tfoot>
</table>
