@model TvcLesson10EF.Models.Category

@{
    ViewData["Title"] = "Xem thông tin chi tiết";
}


<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h1 class="my-2">@ViewData["Title"]</h1>
            </div>
            <div class="card-body">
                <div class="form-group my-1">
                    <label> Mã loại:</label>
                    @Html.DisplayFor(model => model.CategoryId)
                </div>
                <div class="form-group my-1">
                    <label> Tên loại:</label>
                    @Html.DisplayFor(model => model.CategoryName)
                </div>
            </div>
            <div class="card-footer">
                <div class="form-group my-2">
                    <a asp-action="TvcEdit" asp-route-tvcId="@Model?.CategoryId" class="btn btn-primary">Sừa</a>
                    <a asp-action="TvcIndex" class="btn btn-danger">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>